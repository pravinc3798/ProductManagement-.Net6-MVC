@using CommonLayer.Model
@model ProductModel
@{
    ViewData["Title"] = "Create";
}
<div style="display:flex; flex-direction:column ;align-items:center">
	
	<br />
	<h2>Add New Product</h2>
	<br />

	<form method="post" enctype="multipart/form-data">

		<div style="display:flex; align-items:center; justify-content:space-between; border: 1px solid #DCDCDC; padding:20px; border-radius:10px; width:50vw">

			<div class="ms-5 mt-2" style="display:flex; flex-direction:column; gap:1rem; width:35%">
				
				<div class="mb-3">
					<label asp-for="ProductCode"></label>
					<input class="form-control" asp-for="ProductCode" placeholder="Product Code" />
					<span asp-validation-for="ProductCode" class="text-danger"></span>
					<span class="text-danger">@Html.ValidationMessage("Code")</span>
				</div>

				<div class="mb-3">
					<label asp-for="ProductName"></label>
					<input asp-for="ProductName" class="form-control" placeholder="Product Name" />
					<span asp-validation-for="ProductName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="CategoryId"></label>
					<select class="form-select" s asp-for="CategoryId" class="form-control">
						<option value="1">Category A</option>
						<option value="2">Category B</option>
						<option value="3">Category C</option>
						<option value="4">Category D</option>
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ExpiryDate"></label>
					<input asp-for="ExpiryDate" class="form-control" />
					<span class="text-danger">@Html.ValidationMessage("Expiry")</span>
				</div>
				
			</div>

			<div class="me-5" style="display:flex; flex-direction:column; gap:1rem; ">

				<div class="mb-3">
					<label asp-for="ProductDescription"></label>
					<textarea asp-for="ProductDescription" class="form-control" rows="4" placeholder="Product Description"></textarea>
					<span asp-validation-for="ProductDescription" class="text-danger"></span>
				</div>

				<div class="mb-3" style="display:flex; gap:2rem; ">
					<p style="font-weight:bold">Status : </p>
					<div>
						<input id="Active" class="form-check-input" type="radio" checked @Html.RadioButton("IsActive", true) <label for="Active">Active</label>
					</div>
					<div>
						<input id="Suspended" class="form-check-input" type="radio" @Html.RadioButton("IsActive", false) <label for="Suspended"> Suspended </label>
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="ProductImage"></label>
					<input type="file" accept="image/png, image/jpeg" asp-for="ProductImage" class="form-control" />
				</div>

				<div>
					<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
					<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Back to List
					</a>
				</div>

			</div>

		</div>

	</form>
</div>


@section Scripts
{
	@{<partial name="_ValidationScriptsPartial" />}
}